
---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Home">
  <h1>What is ECR?</h1>
  <p>Early Career Researchers </p>

  <div class="glider-contain">
    <button class="glider-prev">«</button>
    <div class="glider">
      <div><img src={`${base}images/carouselImages/img-1.jpg`} alt="Slide 1" /></div>
      <div><img src={`${base}images/carouselImages/img-2.jpg`} alt="Slide 1" /></div>
      <div><img src={`${base}images/carouselImages/img-3.jpg`} alt="Slide 1" /></div>
    </div>
    <button class="glider-next">»</button>
    <div class="dots"></div>
  </div>
</BaseLayout>